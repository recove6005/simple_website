<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="defaultFetchSize" value="100"/>
        <setting name="defaultStatementTimeout" value="25"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias alias="UserVO" type="com.example.book.domain.vo.UserVO"/>
        <typeAlias alias="BookVO" type="com.example.book.domain.vo.BookVO"/>
        <typeAlias alias="ReservationVO" type="com.example.book.domain.vo.ReservationVO"/>
        <typeAlias alias="AdminVO" type="com.example.book.domain.vo.AdminVO"/>
        <typeAlias alias="LoanVO" type="com.example.book.domain.vo.LoanVO"/>
    </typeAliases>

</configuration>