<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="defaultFetchSize" value="100"/>
        <setting name="defaultStatementTimeout" value="25"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <!--유저 관련-->
        <typeAlias alias="UserVO" type="com.example.hotelreservation.domains.vo.UserVO" />

        <!--게시판 관련-->
        <typeAlias alias="BoardVO" type="com.example.hotelreservation.domains.vo.BoardVO"/>

<!--        평점 관련-->
        <typeAlias alias="RatingVO" type="com.example.hotelreservation.domains.vo.RatingVO"/>

<!--        방 관련-->
        <typeAlias alias="RoomImagesVO" type="com.example.hotelreservation.domains.vo.RoomImagesVO"/>
        <typeAlias alias="RoomVO" type="com.example.hotelreservation.domains.vo.RoomVO"/>
        <typeAlias alias="RoomDTO" type="com.example.hotelreservation.domains.dto.RoomDTO"/>
        <typeAlias alias="ReservationVO" type="com.example.hotelreservation.domains.vo.ReservationVO"/>
        <typeAlias alias="ReservationDTO" type="com.example.hotelreservation.domains.dto.ReservationDTO"/>
    </typeAliases>
</configuration>